# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google reCAPTCHA v3
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# OAuth Providers (Optional - for future Google/Facebook login)
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# Netopia Payment Gateway
# IMPORTANT: Pentru testare locală folosește ngrok sau localtunnel
# Exemplu: https://abc123.ngrok.io sau https://promac.loca.lt
VITE_APP_BASE_URL=http://localhost:5173
VITE_NETOPIA_MERCHANT_ID=NETOPIA_TEST
VITE_NETOPIA_MERCHANT_KEY=your_sandbox_merchant_key_here

# Netopia Sandbox Certificates (descarcă din Admin → Conturi comerciant → Sincronizează)
VITE_NETOPIA_PUBLIC_CERT=./certs/sandbox.XXXX-XXXX-XXXX-XXXX-XXXX.public.cer
VITE_NETOPIA_PRIVATE_CERT=./certs/sandbox.XXXX-XXXX-XXXX-XXXX-XXXX.private.key

# Netopia Production Certificates (Only for production)
# VITE_NETOPIA_PUBLIC_CERT_PROD=/path/to/live.public.cer
# VITE_NETOPIA_PRIVATE_CERT_PROD=/path/to/live.private.key

# E-commerce Feature Flags
# Set to false to convert to presentation-only site
VITE_ECOMMERCE_ENABLED=false
VITE_SHOW_PRICES=false
VITE_SHOW_STOCK=false
VITE_SHOW_CART=false
VITE_ENABLE_CHECKOUT=false
VITE_QUOTE_REQUEST_ENABLED=true
{
  "name": "tiles-ecommerce",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "typecheck": "tsc --noEmit",
    "test:cart": "tsx tests/run-cart-tests.ts",
    "test:cart:headed": "tsx tests/run-cart-tests.ts -- --headed",
    "test:cart:mobile": "tsx tests/run-cart-tests.ts -- --device mobile",
    "test:cart:debug": "tsx tests/run-cart-tests.ts -- --debug",
    "test:cart:record": "tsx tests/run-cart-tests.ts -- --record --trace",
    "test:cart:gresie": "tsx tests/run-cart-tests.ts -- --grep gresie",
    "test:cart:faianta": "tsx tests/run-cart-tests.ts -- --grep faianta",
    "test:cart:all": "tsx tests/run-cart-tests.ts -- --browser all --device all",
    "test:reports": "tsx tests/run-tests-with-reports.ts",
    "test:reports:gresie": "tsx tests/run-tests-with-reports.ts -- --category gresie",
    "test:reports:faianta": "tsx tests/run-tests-with-reports.ts -- --category faianta",
    "test:reports:comprehensive": "tsx tests/run-tests-with-reports.ts -- --category comprehensive",
    "test:reports:all": "tsx tests/run-tests-with-reports.ts -- --category all --headed",
    "test:filters": "npx playwright test tests/filter-component-validation.spec.ts --headed",
    "test:coordinated": "npx playwright test tests/coordinated-cart-tests.spec.ts --headed",
    "test:coordinated:reports": "tsx tests/run-tests-with-reports.ts -- --test tests/coordinated-cart-tests.spec.ts",
    "test:filters:subcomponents": "npx playwright test tests/filter-subcomponent-tests.spec.ts --headed",
    "test:filters:combinations": "npx playwright test tests/filter-combination-tests.spec.ts --headed",
    "test:filters:persistence": "npx playwright test tests/filter-persistence-tests.spec.ts --headed",
    "test:filters:functionality": "npx playwright test tests/product-filter-functionality.spec.ts --headed",
    "test:filters:comprehensive": "tsx tests/run-comprehensive-filter-tests.ts",
    "test:filters:comprehensive:headed": "tsx tests/run-comprehensive-filter-tests.ts -- --headed",
    "test:filters:campaign": "tsx tests/run-filter-campaign.ts",
    "test:filters:campaign:reports": "tsx tests/run-filter-campaign.ts -- --with-reports"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@mui/x-date-pickers": "^8.11.0",
    "@supabase/supabase-js": "^2.56.0",
    "@tanstack/react-query": "^5.85.5",
    "@types/crypto-js": "^4.2.2",
    "@types/jspdf": "^1.3.3",
    "@types/react-slick": "^0.23.13",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-google-recaptcha-v3": "^1.11.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.2",
    "react-slick": "^0.31.0",
    "slick-carousel": "^1.8.1",
    "tsx": "^4.20.5",
    "zod": "^4.1.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "supabase": "^2.39.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
